{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@common": ["common"],
      "@core":["core"],
      "@config/*":["config/*"],
      "@schemaDirectives":["config/graphql/schemaDirectives"],
      "@environment":["environment"]
		}
  },
  "exclude": ["node_modules", "dist"]
}
